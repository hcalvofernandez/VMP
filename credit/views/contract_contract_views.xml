<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- contract.contract Form Inherit-->
    <record model="ir.ui.view" id="contract_contract_form_view_inherit">
      <field name="name">contract.contract.form.view.inherit</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_customer_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='recurring_invoice_line']" position="after">
           <page name="schemes_credit_page" string="Esquemas de Crédito" attrs="{'invisible': [('type_contract', '!=', 'credito')]}">
                  <field name="credit_schemes_line_ids"/>
           </page>
       </xpath>
      </field>
    </record>

    <!-- res.partner Form Inherit-->
    <record model="ir.ui.view" id="res_partner_form_view_inherit_credit">
        <field name="name">res.partner.form.view.inherit.credit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='vat']" position="after">
            <field name="type_contract_hide"/>

            <field name="ids_schemes_contracts" invisible="1"/>
            <field name="credit_s_id" attrs="{'invisible':[('type_contract_hide','not in', ['credito'])]}" domain="[('id','in',ids_schemes_contracts)]"/>

            <field name="credit_limit_computed" attrs="{'invisible':[('type_contract_hide','not in', ['credito'])]}" domain="[('id','in',ids_schemes_contracts)]"/>

            <field name="ids_schemes_sub" invisible="1" />
            <field name="schemes_sub_id" attrs="{'invisible':[('type_contract_hide','not in', ['subsidio'])]}" domain="[('id','in',ids_schemes_sub)]"/>
            
          </xpath>
          <xpath expr="//field[@name='function']" position="before">
            <field name="client_number"/>
          </xpath>
        </field>
    </record>

        <!-- res.partner tree Inherit-->
    <record model="ir.ui.view" id="res_partner_tree_view_inherit_credit">
        <field name="name">res.partner.tree.view.inherit.credit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
          <xpath expr="//tree" position="attributes">
              <attribute name="editable">bottom</attribute>
          </xpath>
          <xpath expr="//field[@name='phone']" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
          <xpath expr="//field[@name='email']" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
          <xpath expr="//field[@name='phone']" position="before">
            <field name="commercial_partner_id"/>
            <field name="credit_limit"/>
            <field name="saldo_credit"/>
            <button name="report_sales_individual" string="Reporte Individual" class="oe_highlight"/>
          </xpath>
        </field>
    </record>



    <!--Action-->
    <record id="detail_credit_partner_action_tree" model="ir.actions.act_window">
      <field name="name">Detalles de Crédito</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.partner</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree</field>
      <field name="domain">[('active', '=', True)]</field>
      <field name="context">{'search_default_type_person':1, 'create': False}</field>
    </record>

    <menuitem
        id="detail_credit_partner_menu"
        name="Detalles de Crédito"
        parent="sale.sale_menu_root"
        sequence="12"
    />

    <menuitem
        id="detail_credit_partner_sub_menu"
        name="Detalles de Crédito"
        parent="sale.menu_sale_config"
        action="detail_credit_partner_action_tree"
        sequence="12"
    />

  </data>
</odoo>