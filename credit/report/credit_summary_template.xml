<odoo>
    <template id="report_credit_summary">
        <t t-call="web.html_container">
            <div class="header"></div>
                <t t-call="web.internal_layout">
                    <div class="page">
                      <div class="container-fluid">
                        <table style="width:100%" class="text-uppercase text-center">
                          <tr>
                            <th style="width:40%">
                                <img style="width: 200px !important; height: auto !important;" t-if="logo" t-att-src="'data:image/jpg;base64,%s' %logo"/>
                            </th>
                            <th style="border-bottom: 3px solid #343a40; width:60%">
                              <h3><span t-esc="orders[0]['cliente_principal']"/></h3>
                            </th>
                          </tr>
                        </table>
                        <table style="width:100%; font-size: 14px;" class="text-uppercase">
                            <tr>
                              <th scope="col" style="width: 40%"></th>
                              <th scope="col" style="width: 60%">
                                <table style="width:100%">
                                  <th>
                                    <table style="width:100%; margin-top: 20px;">
                                      <thead>
                                        <th class="text-center">
                                          <h3>Resumen de Cr√©dito</h3>
                                          <p>del <span t-esc="start_date"/> al <span t-esc="end_date"/></p>
                                        </th>
                                      </thead>
                                    </table>
                                  </th>
                                </table>
                              </th>
                            </tr>
                        </table>
                        <table class="table table-striped" style="width:100%; margin-top: 50px;">
                          <thead style=" background-color:#4c4c4c; color:white;" class="thead-dark text-uppercase text-center">
                            <tr>
                              <th scope="col">no. cliente</th>
                              <th scope="col">nombre</th>
                              <th scope="col">Importe</th>
                            </tr>
                          </thead>
                          <tbody class="text-center">
                            <t t-set = "sub_total" t-value = "0" />
                            <t t-foreach="orders" t-as="o">
                                 <t t-set = "sub_total" t-value = "sub_total + o['importe']" /> 
                                <tr >
                                  <td style="text-align: center !important;"><span t-esc="o['client_number']"/></td>
                                  <td style="text-align: center !important;"><span t-esc="o['cliente']"/></td>
                                  <td style="text-align: center !important;" class="font-weight-bold">$ <span t-esc="o['importe']"/></td>
                                  </tr>
                            </t>
                            <tr class="font-weight-bold text-uppercase">
                              <td colspan="2" style="text-align: right !important;" >subtotales:</td>
                              <td style="text-align: center !important;" >$ <span t-esc="sub_total"/></td>
                            </tr>
                            <tr class="font-weight-bold text-uppercase">
                              <td colspan="2" style="text-align: right !important;">iva:</td>
                              <t t-set = "iva" t-value = "sub_total * .16" />
                              <td style="text-align: center !important;" >$ <span t-esc="'%.2f'% iva"/></td>
                            </tr>
                            <tr class="font-weight-bold text-uppercase">
                              <td colspan="2" style="text-align: right !important;">totales:</td>
                              <t t-set = "total" t-value = "sub_total + iva" />
                              <td style="text-align: center !important;" >$ <span t-esc="'%.2f'% total"/></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                </t>
        </t>
    </template>
</odoo>