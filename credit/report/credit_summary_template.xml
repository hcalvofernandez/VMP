<odoo>
    <template id="report_credit_summary">
        <t t-call="web.html_container">
            <div class="header"></div>
                <t t-call="web.internal_layout">
                    <div class="page">
                      <div class="container-fluid">
                        <table style="width:100%" class="text-uppercase text-center">
                          <tr>
                            <th style="width:40%">
                              <img t-if="res_company.logo"  t-att-src="'data:image/png;base64,%s' %res_company.logo"/>
                            </th>
                            <th style="border-bottom: 3px solid #343a40; width:60%">
                              <h4>CAFETERÍA</h4>
                            </th>
                          </tr>
                        </table>
                        <table style="width:100%; font-size: 14px;" class="text-uppercase">
                            <tr>
                              <th scope="col" style="width: 40%"></th>
                              <th scope="col" style="width: 60%">
                                <table style="width:100%">
                                  <th>
                                    <table style="width:100%; margin-top: 20px;">
                                      <thead>
                                        <th class="text-center">
                                          <h5>Resumen de Crédito</h5>
                                          <p>del 16-11-2019 al 01-12-2019</p>
                                        </th>
                                      </thead>
                                    </table>
                                  </th>
                                </table>
                              </th>
                            </tr>
                        </table>
                        <table class="table table-striped" style="width:100%; margin-top: 50px;">
                          <thead style=" background-color:#4c4c4c; color:white;" class="thead-dark text-uppercase text-center">
                            <tr>
                              <th scope="col">no. cliente</th>
                              <th scope="col">nombre</th>
                              <th scope="col">Importe</th>
                            </tr>
                          </thead>
                          <tbody class="text-center">
                            <t t-set = "sum_total" t-value = "0" /> 
                            <t t-foreach="docs" t-as="o">
                                 <t t-set = "sum_total" t-value = "sum_total + o.amount_total" /> 
                                <tr >
                                  <td style="text-align: center !important; border-bottom: 1px solid #343a40 !important;"><span t-esc="o.partner_id.client_number"/></td>
                                  <td style="text-align: center !important; border-bottom: 1px solid #343a40 !important;"><span t-esc="o.partner_id.name"/></td>
                                  <td style="text-align: center !important; border-bottom: 1px solid #343a40 !important;" class="font-weight-bold">$ <span t-esc="o.amount_total"/></td>
                                  </tr>
                            </t>
                            <tr class="font-weight-bold text-uppercase">
                              <td colspan="2" style="text-align: right !important;" >subtotales:</td>
                              <td style="text-align: center !important;" >$ <span t-esc="sum_total"/></td>
                            </tr>
                            <tr class="font-weight-bold text-uppercase">
                              <td colspan="2" style="text-align: right !important;">iva:</td>
                              <td style="text-align: center !important;" >$ 0.00</td>
                            </tr>
                            <tr class="font-weight-bold text-uppercase">
                              <td colspan="2" style="text-align: right !important;">totales:</td>
                              <td style="text-align: center !important;" >$ <span t-esc="sum_total"/></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                </t>
        </t>
    </template>
</odoo>
