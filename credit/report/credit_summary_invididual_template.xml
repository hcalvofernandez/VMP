<odoo>
    <template id="report_credit_summary_individual">
        <t t-call="web.html_container">
          <div class="header"></div>
            <t t-call="web.internal_layout">
                <div class="page">
                  <div class="container-fluid">
                    <table style="width:100%" class="text-uppercase text-center">
                          <tr>
                            <th style="width:40%">
                                <img style="width: 200px !important; height: auto !important;" t-if="logo" t-att-src="'data:image/jpg;base64,%s' %logo"/>
                            </th>
                            <th style="width:60%">
                              <h3 class="text-uppercase text-center">Detallado de Ventas Individual</h3>
                              <h4 class="text-uppercase text-center"><span t-esc="client"/></h4>
                              <p style="text-align: center !important;">del <span t-esc="start_date"/> al <span t-esc="end_date"/></p>
                            </th>
                          </tr>
                        </table>
                      <hr/>
                      <table class="table table-striped" style="margin-top: 50px; width:100%; font-size: 14px;">
                          <thead style=" background-color:#4c4c4c; color:white;" class="thead-dark text-uppercase text-center">
                            <tr>
                              <th style="text-align: center !important;" scope="col">no. cliente</th>
                              <th style="text-align: center !important;" scope="col">nombre</th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody class="text-center">
                            
                              <tr>
                              <td><span t-esc="client_number"/></td>
                              <td><span t-esc="client"/></td>
                              <td>
                                <table style="width: 100% !important;" class="text-uppercase table-sm">
                                  <tr>
                                    <th style="text-align: center !important;">Orden</th>
                                    <th style="text-align: center !important;">Fecha y Hora</th>
                                    <th style="text-align: center !important;">Producto</th>
                                    <th style="text-align: center !important;">Importe</th>
                                  </tr>
                                  <t t-set = "total" t-value = "0" />
                                  <t t-foreach="orders" t-as="o">
                                    <t t-set = "total" t-value = "total + o['importe']" /> 
                                    <tr>
                                      <td style="text-align: center !important;"><span t-esc="o['orden']"/></td>
                                      <td style="text-align: center !important;"><span t-esc="o['fecha']"/></td>
                                      <td style="text-align: center !important;"><span t-esc="o['producto']"/></td>
                                      <td style="text-align: center !important;">$ <span t-esc="'%.2f'% o['importe']"/></td>
                                    </tr>
                                  </t>
                                  <tr class="font-weight-bold">
                                    <td class="text-right"></td>
                                    <td style="text-align: center !important;"></td>
                                    <td style="text-align: center !important;">Totales:</td>
                                    <td style="text-align: center !important;">$ <span t-esc="'%.2f'% total"/></td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                  </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
