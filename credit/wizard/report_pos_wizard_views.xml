<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_pos_wizard_form" model="ir.ui.view">
        <field name="name">Reporte Ventas POS</field>
        <field name="model">credit.report_pos_wizard</field>
        <field name="arch" type="xml">
            <form string='Reporte Ventas POS'>
                <group>
                    <field col="4" name="start_date" autocomplete="off"/> 
                    <field col="4" name="end_date" autocomplete="off"/> 
                    <!--<field col="4" name="company_id"/>-->
                </group>
                <footer>
                    <button name="sale_report_pos" type="object" string="VENTAS" class="btn btn-success"/>
                    <button name="get_report_credit_details" string="REPORTE 1" type="object" class="btn btn-success"/>
                    <!--<button name="restart_credits" string="REINICIAR NUMEROS" type="object" class="btn btn-success"/>-->
                    <button string="Cancel" special="cancel" class="btn btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_report_pos_wizard" model="ir.actions.act_window">
        <field name="name">Reporte Ventas POS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">credit.report_pos_wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_pos_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>