    <t t-name="FromCredit">
        <t t-if="widget.pos.config.enable_credit">
            <section class="section_credit">
                <div style="height: auto;width:100%;">
                    <div class="foreign_infoline">
                        <t t-if="widget.pos.get_order() and widget.pos.get_order().get_credit_detail().length != 0">
                            <t t-set="credit_used" t-value="0"/>
                            <h3 align="center" id="from_credit">
                                From Credit :<t t-esc="widget.format_currency(-widget.pos.credit_amount)"/><br />
                                Amount Due :<t t-esc="widget.format_currency(widget.pos.get_order().get_total_with_tax())"/><br />
                               </h3>
                        </t>
                    </div>
                </div>
            </section>
        </t>
    </t>
    
    <t t-name="PaymentLines">
        <tr class='payment-line' t-att-data-id='statement.id'>
            <td><t t-esc='statement.journal_id ? statement.journal_id[1] : ""' /></td>
            <td><t t-esc='statement.date' /></td>
            <td><t t-esc='widget.format_currency(statement.amount)' /></td>
        </tr>
    </t>

    <t t-extend="PaymentScreen-Paymentlines">
        <t t-jquery=".total" t-operation="replace">
            <div class='total' t-att-amount="order.getNetTotalTaxIncluded()">
                <t t-esc="widget.format_currency(order.getNetTotalTaxIncluded())" />
            </div>
        </t>
        <t t-jquery="td.col-name" t-operation="replace">
            <td class="col-name">
                <t t-esc="line.name" />
                <t t-if="line.get_giftcard_line_code()">
                    (<t t-esc="line.get_giftcard_line_code()" />)
                </t>
                <t t-if="line.get_gift_voucher_line_code()">
                    (<t t-esc='line.get_gift_voucher_line_code()' />)
                </t>
            </td>
        </t>
